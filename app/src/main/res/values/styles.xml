<resources>
    <!-- Progress Bar -->
    <style name="LinearProgress" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/accent</item>
    </style>

    <!-- Toolbar -->
    <style name="Toolbar" parent="AppTheme.NoActionBar">
        <item name="android:background">@color/primary</item>
    </style>

    <!-- Import Dialog -->
    <style name="ImportDialog" parent="ImportTheme">
        <item name="android:background">@color/white</item>
    </style>

    <style name="NotificationTitle" parent="@android:style/TextAppearance.StatusBar.EventContent.Title" />

    <style name="TextButton">
        <item name="android:padding">16dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/red_accent</item>
        <item name="android:textStyle">bold</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="NumpadItem">
        <item name="android:layout_width">64dp</item>
        <item name="android:layout_height">64dp</item>
    </style>

    <style name="NumpadButton" parent="NumpadItem">
        <item name="android:background">@drawable/bg_button_circle</item>
    </style>

    <style name="NumpadTextButton" parent="NumpadButton">
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="NumpadImageButton" parent="NumpadButton">
        <item name="android:padding">16dp</item>
    </style>
</resources>
