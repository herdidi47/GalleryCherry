<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/image_placeholder_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_circle"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@id/layout_numpad"
        app:layout_constraintEnd_toEndOf="@id/line_1"
        app:layout_constraintStart_toStartOf="@id/line_1"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/image_placeholder_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_circle"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@id/layout_numpad"
        app:layout_constraintEnd_toEndOf="@id/line_2"
        app:layout_constraintStart_toStartOf="@id/line_2"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/image_placeholder_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_circle"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@id/layout_numpad"
        app:layout_constraintEnd_toEndOf="@id/line_3"
        app:layout_constraintStart_toStartOf="@id/line_3"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/image_placeholder_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_circle"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@id/layout_numpad"
        app:layout_constraintEnd_toEndOf="@id/line_4"
        app:layout_constraintStart_toStartOf="@id/line_4"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/line_1"
        android:layout_width="40dp"
        android:layout_height="1dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="24dp"
        android:background="@android:color/white"
        app:layout_constraintEnd_toStartOf="@+id/line_2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/image_placeholder_1" />

    <View
        android:id="@+id/line_2"
        android:layout_width="40dp"
        android:layout_height="1dp"
        android:layout_marginTop="24dp"
        android:background="@android:color/white"
        app:layout_constraintEnd_toStartOf="@+id/line_3"
        app:layout_constraintStart_toEndOf="@+id/line_1"
        app:layout_constraintTop_toBottomOf="@id/image_placeholder_2" />

    <View
        android:id="@+id/line_3"
        android:layout_width="40dp"
        android:layout_height="1dp"
        android:layout_marginTop="24dp"
        android:background="@android:color/white"
        app:layout_constraintEnd_toStartOf="@+id/line_4"
        app:layout_constraintStart_toEndOf="@+id/line_2"
        app:layout_constraintTop_toBottomOf="@id/image_placeholder_3" />

    <View
        android:id="@+id/line_4"
        android:layout_width="40dp"
        android:layout_height="1dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:background="@android:color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/line_3"
        app:layout_constraintTop_toBottomOf="@id/image_placeholder_4" />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/layout_numpad"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/red_item"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/button_1"
            style="@style/NumpadTextButton"
            android:text="1"
            app:layout_constraintBottom_toTopOf="@id/button_4"
            app:layout_constraintEnd_toStartOf="@id/button_2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/button_2"
            style="@style/NumpadTextButton"
            android:text="2"
            app:layout_constraintBottom_toTopOf="@id/button_5"
            app:layout_constraintEnd_toStartOf="@id/button_3"
            app:layout_constraintStart_toEndOf="@id/button_1"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/button_3"
            style="@style/NumpadTextButton"
            android:text="3"
            app:layout_constraintBottom_toTopOf="@id/button_6"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/button_2"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/button_4"
            style="@style/NumpadTextButton"
            android:text="4"
            app:layout_constraintBottom_toTopOf="@id/button_7"
            app:layout_constraintEnd_toStartOf="@id/button_5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/button_1" />

        <TextView
            android:id="@+id/button_5"
            style="@style/NumpadTextButton"
            android:text="5"
            app:layout_constraintBottom_toTopOf="@id/button_8"
            app:layout_constraintEnd_toStartOf="@id/button_6"
            app:layout_constraintStart_toEndOf="@id/button_4"
            app:layout_constraintTop_toBottomOf="@id/button_2" />

        <TextView
            android:id="@+id/button_6"
            style="@style/NumpadTextButton"
            android:text="6"
            app:layout_constraintBottom_toTopOf="@id/button_9"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/button_5"
            app:layout_constraintTop_toBottomOf="@id/button_3" />

        <TextView
            android:id="@+id/button_7"
            style="@style/NumpadTextButton"
            android:text="7"
            app:layout_constraintBottom_toTopOf="@id/spacer"
            app:layout_constraintEnd_toStartOf="@id/button_8"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/button_4" />

        <TextView
            android:id="@+id/button_8"
            style="@style/NumpadTextButton"
            android:text="8"
            app:layout_constraintBottom_toTopOf="@id/button_0"
            app:layout_constraintEnd_toStartOf="@id/button_9"
            app:layout_constraintStart_toEndOf="@id/button_7"
            app:layout_constraintTop_toBottomOf="@id/button_5" />

        <TextView
            android:id="@+id/button_9"
            style="@style/NumpadTextButton"
            android:text="9"
            app:layout_constraintBottom_toTopOf="@id/button_backspace"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/button_8"
            app:layout_constraintTop_toBottomOf="@id/button_6" />

        <View
            android:id="@+id/spacer"
            style="@style/NumpadItem"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/button_0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/button_7" />

        <TextView
            android:id="@+id/button_0"
            style="@style/NumpadTextButton"
            android:text="0"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/button_backspace"
            app:layout_constraintStart_toEndOf="@id/spacer"
            app:layout_constraintTop_toBottomOf="@id/button_8" />

        <ImageView
            android:id="@+id/button_backspace"
            style="@style/NumpadImageButton"
            android:src="@drawable/ic_backspace"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/button_0"
            app:layout_constraintTop_toBottomOf="@id/button_9" />

    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>