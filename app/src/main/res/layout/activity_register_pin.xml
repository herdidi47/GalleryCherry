<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.RegisterPinActivity">

    <View
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:background="?colorPrimary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:text="@string/title_activity_app_lock"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@id/toolbar"
        app:layout_constraintStart_toStartOf="@id/toolbar"
        app:layout_constraintTop_toTopOf="@id/toolbar" />

    <Switch
        android:id="@+id/switch_lock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        app:layout_constraintBottom_toBottomOf="@id/toolbar"
        app:layout_constraintEnd_toEndOf="@id/toolbar"
        app:layout_constraintTop_toTopOf="@id/toolbar" />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/layout_pin"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        tools:visibility="visible">

        <ImageView
            android:id="@+id/image_placeholder_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@null"
            android:src="@drawable/ic_circle"
            android:visibility="invisible"
            app:layout_constraintBottom_toTopOf="@id/fragmentNumpad"
            app:layout_constraintEnd_toEndOf="@id/line_1"
            app:layout_constraintStart_toStartOf="@id/line_1"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/image_placeholder_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@null"
            android:src="@drawable/ic_circle"
            android:visibility="invisible"
            app:layout_constraintBottom_toTopOf="@id/fragmentNumpad"
            app:layout_constraintEnd_toEndOf="@id/line_2"
            app:layout_constraintStart_toStartOf="@id/line_2"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/image_placeholder_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@null"
            android:src="@drawable/ic_circle"
            android:visibility="invisible"
            app:layout_constraintBottom_toTopOf="@id/fragmentNumpad"
            app:layout_constraintEnd_toEndOf="@id/line_3"
            app:layout_constraintStart_toStartOf="@id/line_3"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/image_placeholder_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@null"
            android:src="@drawable/ic_circle"
            android:visibility="invisible"
            app:layout_constraintBottom_toTopOf="@id/fragmentNumpad"
            app:layout_constraintEnd_toEndOf="@id/line_4"
            app:layout_constraintStart_toStartOf="@id/line_4"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/line_1"
            android:layout_width="40dp"
            android:layout_height="1dp"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="24dp"
            android:background="@android:color/white"
            app:layout_constraintEnd_toStartOf="@+id/line_2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/image_placeholder_1" />

        <View
            android:id="@+id/line_2"
            android:layout_width="40dp"
            android:layout_height="1dp"
            android:layout_marginTop="24dp"
            android:background="@android:color/white"
            app:layout_constraintEnd_toStartOf="@+id/line_3"
            app:layout_constraintStart_toEndOf="@+id/line_1"
            app:layout_constraintTop_toBottomOf="@id/image_placeholder_2" />

        <View
            android:id="@+id/line_3"
            android:layout_width="40dp"
            android:layout_height="1dp"
            android:layout_marginTop="24dp"
            android:background="@android:color/white"
            app:layout_constraintEnd_toStartOf="@+id/line_4"
            app:layout_constraintStart_toEndOf="@+id/line_2"
            app:layout_constraintTop_toBottomOf="@id/image_placeholder_3" />

        <View
            android:id="@+id/line_4"
            android:layout_width="40dp"
            android:layout_height="1dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:background="@android:color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/line_3"
            app:layout_constraintTop_toBottomOf="@id/image_placeholder_4" />

        <fragment
            android:id="@+id/fragmentNumpad"
            android:name="me.devsaki.hentoid.fragments.NumpadFragment"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout="@layout/fragment_numpad" />


    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>